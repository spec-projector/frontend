{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "spec-project": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "spec",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "./dist",
            "index": "index.html",
            "main": "main.ts",
            "polyfills": "polyfills.ts",
            "tsConfig": "tsconfig.json",
            "assets": [
              "src/assets",
              {
                "glob": "**/*",
                "input": "node_modules/@junte/ui/lib/assets/fonts/junte-ui-icons-default/",
                "output": "./assets/fonts/icons/"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@junte/ui/lib/assets/icons/animated/",
                "output": "./assets/icons/animated/"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@junte/ui/lib/assets/icons/svg/",
                "output": "./assets/icons/svg/"
              },
              {
                "glob": "**/*",
                "input": "node_modules/ngx-monaco-editor/assets/monaco/",
                "output": "./assets/monaco/"
              }
            ],
            "styles": [
              "node_modules/@junte/ui/lib/assets/fonts/junte-ui-icons-default/junte-ui-icons-default-font.scss",
              "node_modules/@openfonts/open-sans_cyrillic/index.css",
              "src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "localize": [
                "ru",
                "en"
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "baseHref": "/",
              "outputPath": "dist/",
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            },
            "ru": {
              "aot": true,
              "outputPath": "dist/ru/",
              "baseHref": "/",
              "i18nFile": "src/locale/messages.ru.xlf",
              "i18nFormat": "xlf",
              "i18nLocale": "ru"
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "spec-project:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "spec-project:build:production"
            },
            "ru": {
              "browserTarget": "team-projector:build:ru"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "spec-project:build"
          }
        }
      },
      "i18n": {
        "sourceLocale": {
          "code": "en",
          "baseHref": "/en/"
        },
        "locales": {
          "ru": {
            "translation": "src/locale/messages.ru.xlf",
            "baseHref": "/ru/"
          }
        }
      }
    },
    "game": {
      "i18n": {
        "sourceLocale": {
          "code": "en",
          "baseHref": "/en/"
        },
        "locales": {
          "ru": {
            "translation": "src/locale/messages.ru.xlf",
            "baseHref": "/ru/"
          }
        }
      },
      "root": "projects/game/",
      "sourceRoot": "projects/game/src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {},
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/game",
            "baseHref": "/spec-projector/frontend/",
            "index": "projects/game/src/index.html",
            "main": "projects/game/src/main.ts",
            "polyfills": "projects/game/src/polyfills.ts",
            "tsConfig": "projects/game/tsconfig.app.json",
            "assets": [
              "projects/game/src/assets/kanban.json"
            ],
            "styles": [
              "projects/game/src/styles.scss",
              "node_modules/@junte/ui/lib/assets/fonts/open-sans/import.scss",
              "node_modules/@junte/ui/lib/assets/styles/icons.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "localize": [
                "ru"
              ],
              "fileReplacements": [
                {
                  "replace": "projects/game/src/environments/environment.ts",
                  "with": "projects/game/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "baseHref": "/",
              "outputPath": "dist/",
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "game:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "game:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "game:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/game/src/test.ts",
            "polyfills": "projects/game/src/polyfills.ts",
            "tsConfig": "projects/game/tsconfig.spec.json",
            "karmaConfig": "projects/game/karma.conf.js",
            "styles": [
              "projects/game/src/styles.scss"
            ],
            "scripts": [],
            "assets": [
              "projects/game/src/assets"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/game/tsconfig.app.json",
              "projects/game/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "spec-project",
  "cli": {
    "analytics": false
  }
}
